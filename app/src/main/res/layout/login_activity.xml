<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/mb_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>
    <Spinner
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/flags_spnr"
        android:layout_below="@id/mb_text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/countryCode_edtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/flags_spnr"
        android:layout_below="@id/mb_text"
        android:text="+123"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:layout_alignTop="@id/mobile_edtxt"
        android:background="@color/edit_text_gray"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mobile_edtxt"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mb_text"
        android:background="@color/edit_text_gray"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/countryCode_edtxt"
        android:layout_marginEnd="15dp"
        android:hint="Mobile number"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile_edtxt"
        android:layout_marginStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Next"
        android:textAllCaps="false"
        app:cornerRadius="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/otp_hlp_tv"
        android:text="By continuing you may recive an SMS for verification. Message and data rates may apply"
        android:layout_below="@id/next_btn"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/or_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_hlp_tv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Continue with Google"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:text="Continue with Facebook"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        android:backgroundTint="@color/white"
        android:layout_below="@id/google_auth_btn"
        android:drawableLeft="@drawable/fui_ic_facebook_white_22dp"/>

</RelativeLayout>